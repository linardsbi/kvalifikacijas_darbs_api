
.modal#new-device-modal(tabindex="-1" role="dialog")
  .modal-dialog.modal-dialog-centered.fade(role="document")
    .modal-content
      .modal-header
      h5.modal-title
      button(type="button" class="close" data-dismiss="modal" aria-label="Close")
        span(aria-hidden="true") &times;
    .modal-body
      form(action="post")
        select#device-list(name="device-list")
          option(value="custom") Custom device
        input#new-device-name(type="text", name="new-device-name", placeholder="Device name...")
        
    .modal-footer
      button(type="button" class="btn btn-primary") Add